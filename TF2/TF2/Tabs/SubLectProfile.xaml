<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TF2.Tabs.SubLectProfile">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title"
                HorizontalOptions="CenterAndExpand" 
                   FontSize="Large"
                   FontAttributes="Bold"
                   x:Name="TitleLabel"/>
            <Label Text="Lecturer/subject"
                   HorizontalOptions="CenterAndExpand"
                   x:Name="SubtitleLabel"/>
            <Label Text="Rated: Rating number"
                   HorizontalOptions="CenterAndExpand"
                   x:Name="RatingLabel"
                   FontSize="Large"/>
            <Label Text="All subjects/lecturers:"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   x:Name="List1Label"
                   FontSize="Medium"/>
            <ListView x:Name="SubOrLectList"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="CenterAndExpand"
                      ItemTapped="ItemFromList1Tapped"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>