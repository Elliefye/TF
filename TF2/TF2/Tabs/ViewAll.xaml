<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TF2.ViewAll"
             Title="ViewAll">
    <StackLayout>
        <SearchBar Placeholder="Look for something..." SearchButtonPressed="SearchBar_SearchButtonPressed" x:Name="Searchbar"
                   TextChanged="Searchbar_TextChanged"></SearchBar>
    
    <ListView ItemsSource="{Binding LecSubList}"
              ItemTapped="ItemTapped"
              HasUnevenRows="True"
              BackgroundColor="#ecf0f1"
              SeparatorVisibility="None"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand"
              x:Name="MasterList">

        <ListView.ItemTemplate>

            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="6,4,6,4"
                                 BackgroundColor="White">
                        <Label Text="{Binding LecturerName}"/>
                        <Label Text="{Binding SubjectName}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>

        </ListView.ItemTemplate>
    </ListView>
    </StackLayout>
</ContentPage>